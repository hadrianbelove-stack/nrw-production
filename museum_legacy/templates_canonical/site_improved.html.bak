<!DOCTYPE html>
<html>
<head>
    <title>New Release Wall</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0a0a0a;
            color: #fff;
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 1px solid #333;
            padding-bottom: 20px;
        }
        .header h1 { 
            font-size: 2.5em; 
            margin-bottom: 10px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .meta { 
            color: #888; 
            font-size: 0.9em;
        }
        .filters {
            margin: 20px 0;
            display: flex;
            gap: 10px;
            justify-content: center;
            flex-wrap: wrap;
        }
        .filter-btn {
            padding: 8px 16px;
            background: #222;
            border: 1px solid #444;
            border-radius: 20px;
            color: #fff;
            cursor: pointer;
            transition: all 0.3s;
        }
        .filter-btn:hover {
            background: #333;
            border-color: #667eea;
        }
        .filter-btn.active {
            background: #667eea;
            border-color: #667eea;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        .card {
            background: #111;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        .poster-container {
            position: relative;
            padding-top: 150%;
            background: #222;
        }
        .poster {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .no-poster {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #555;
            text-align: center;
            padding: 20px;
        }
        .inclusion-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(102, 126, 234, 0.9);
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.7em;
            backdrop-filter: blur(10px);
        }
        .info {
            padding: 15px;
        }
        .title {
            font-weight: 600;
            margin-bottom: 8px;
            line-height: 1.3;
        }
        .year {
            color: #888;
            font-size: 0.9em;
        }
        .scores {
            display: flex;
            gap: 10px;
            margin: 10px 0;
            font-size: 0.85em;
        }
        .score {
            padding: 3px 8px;
            background: #222;
            border-radius: 4px;
        }
        .score.rt { border-left: 3px solid #f93; }
        .score.tmdb { border-left: 3px solid #3f9; }
        .score.meta { border-left: 3px solid #fc3; }
        .providers {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin-top: 10px;
        }
        .provider-pill {
            padding: 3px 8px;
            background: #222;
            border: 1px solid #333;
            border-radius: 12px;
            font-size: 0.75em;
            color: #aaa;
        }
        .provider-pill.netflix { border-color: #e50914; color: #e50914; }
        .provider-pill.amazon { border-color: #00a8e1; color: #00a8e1; }
        .provider-pill.apple { border-color: #fff; color: #fff; }
        .provider-pill.disney { border-color: #113ccf; color: #4d7fff; }
        .provider-pill.max { border-color: #002be7; color: #5a7fff; }
        .stats {
            margin: 30px 0;
            padding: 20px;
            background: #111;
            border-radius: 12px;
            text-align: center;
        }
        .stats h3 { margin-bottom: 15px; }
        .stat-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
        }
        .stat {
            padding: 15px;
            background: #1a1a1a;
            border-radius: 8px;
        }
        .stat-value {
            font-size: 2em;
            font-weight: bold;
            color: #667eea;
        }
        .stat-label {
            color: #888;
            font-size: 0.9em;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>New Release Wall</h1>
        <div class="meta">
            {{ items|length }} curated releases • Updated {{ now }}
        </div>
    </div>
    
    <div class="filters">
        <button class="filter-btn active" onclick="filterBy('all')">All</button>
        <button class="filter-btn" onclick="filterBy('reviewed')">Reviewed</button>
        <button class="filter-btn" onclick="filterBy('streaming')">On Streaming</button>
        <button class="filter-btn" onclick="filterBy('english')">English</button>
    </div>
    
    <div class="stats">
        <h3>This Week's Releases</h3>
        <div class="stat-grid">
            <div class="stat">
                <div class="stat-value">{{ items|length }}</div>
                <div class="stat-label">Total Releases</div>
            </div>
            <div class="stat">
                <div class="stat-value">{{ items|selectattr('rt_score')|list|length }}</div>
                <div class="stat-label">With Reviews</div>
            </div>
            <div class="stat">
                <div class="stat-value">{{ items|selectattr('providers')|list|length }}</div>
                <div class="stat-label">Streaming Now</div>
            </div>
        </div>
    </div>
    
    <div class="grid">
        {% for item in items %}
        <div class="card" data-reviewed="{{ 'yes' if item.rt_score else 'no' }}" 
             data-streaming="{{ 'yes' if item.providers else 'no' }}"
             data-language="{{ item.original_language }}">
            <div class="poster-container">
                {% if item.poster %}
                <img src="{{ item.poster }}" alt="{{ item.title }}" class="poster" loading="lazy">
                {% else %}
                <div class="no-poster">{{ item.title }}</div>
                {% endif %}
                {% if item.inclusion_reason %}
                <div class="inclusion-badge">{{ item.inclusion_reason|truncate(20) }}</div>
                {% endif %}
            </div>
            <div class="info">
                <div class="title">
                    {{ item.title }}
                    <span class="year">({{ item.year or '—' }})</span>
                </div>
                
                <div class="scores">
                    {% if item.rt_score %}
                    <span class="score rt">RT: {{ item.rt_score }}%</span>
                    {% endif %}
                    {% if item.tmdb_vote %}
                    <span class="score tmdb">TMDB: {{ "%.1f"|format(item.tmdb_vote) }}</span>
                    {% endif %}
                    {% if item.review_data and item.review_data.metacritic %}
                    <span class="score meta">Meta: {{ item.review_data.metacritic }}</span>
                    {% endif %}
                </div>
                
                <div class="providers">
                    {% for provider in item.providers[:4] %}
                    <span class="provider-pill {{ provider|lower|replace(' ', '')|replace('+', 'plus') }}">
                        {{ provider }}
                    </span>
                    {% endfor %}
                    {% if item.providers|length > 4 %}
                    <span class="provider-pill">+{{ item.providers|length - 4 }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    
    <script>
        function filterBy(type) {
            const cards = document.querySelectorAll('.card');
            const buttons = document.querySelectorAll('.filter-btn');
            
            // Update active button
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Filter cards
            cards.forEach(card => {
                let show = false;
                switch(type) {
                    case 'all':
                        show = true;
                        break;
                    case 'reviewed':
                        show = card.dataset.reviewed === 'yes';
                        break;
                    case 'streaming':
                        show = card.dataset.streaming === 'yes';
                        break;
                    case 'english':
                        show = card.dataset.language === 'en';
                        break;
                }
                card.style.display = show ? 'block' : 'none';
            });
        }
    </script>
</body>
</html>
